<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp2.Pages.AutorizacaoSaida"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Autorização de Saída">

    <Grid>
        <Image
            Aspect="AspectFill"
            HorizontalOptions="Center"
            Opacity="0.16"
            Source="logo_biomessenger.svg"
            VerticalOptions="Center" />
        <Frame
            Padding="20"
            BackgroundColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <StackLayout Spacing="20">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <CheckBox x:Name="AlunoCheckBox" />
                    <Label Text="Aluno 1" VerticalOptions="Center" />
                </StackLayout>

                <Button
                    x:Name="ConfirmarButton"
                    Clicked="OnConfirmarButtonClicked"
                    IsEnabled="False"
                    Text="Confirmar" />
            </StackLayout>
        </Frame>
    </Grid>

</ContentPage>
